{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "bpsr-logs",
    "version": "0.3.0",
    "identifier": "com.bpsr-logs",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "label": "live",
                "url": "live",
                "shadow": false,
                "decorations": false,
                "transparent": true,
                "minWidth": 400,
                "minHeight": 120,
                "alwaysOnTop": true,
                "focus": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
